<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <ImageView
        android:id="@+id/pluseIV"
        android:layout_width="@dimen/_19sdp"
        android:layout_height="@dimen/_19sdp"
        android:layout_marginStart="@dimen/_12sdp"
        android:background="@drawable/circle_shape_orange"
        app:layout_constraintBottom_toBottomOf="@+id/cartMealNumberTV"
        app:layout_constraintStart_toEndOf="@+id/cartMealNumberTV"
        app:layout_constraintTop_toTopOf="@+id/cartMealNumberTV"
        app:srcCompat="@drawable/pluse_white" />

    <ImageView
        android:id="@+id/minuseIV"
        android:layout_width="@dimen/_19sdp"
        android:layout_height="@dimen/_19sdp"
        android:layout_marginEnd="@dimen/_12sdp"
        android:background="@drawable/circle_shape_orange"
        app:layout_constraintBottom_toBottomOf="@+id/cartMealNumberTV"
        app:layout_constraintEnd_toStartOf="@+id/cartMealNumberTV"
        app:layout_constraintTop_toTopOf="@+id/cartMealNumberTV"
        app:srcCompat="@drawable/minuse_white" />

    <ImageView
        android:id="@+id/cartMealRemove"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/_9sdp"
        app:layout_constraintBottom_toBottomOf="@+id/cartMealPrice"
        app:layout_constraintEnd_toStartOf="@+id/cartMealPrice"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/cartMealPrice"
        app:srcCompat="@drawable/delete" />

    <TextView
        android:id="@+id/cartMealNameTV"
        android:layout_width="0dp"
        android:layout_height="@dimen/_20sdp"
        android:background="@drawable/field_background_shape"
        android:elevation="@dimen/_10sdp"
        android:fontFamily="@font/tajawal_regular"
        android:gravity="center"
        android:text="كباب"
        android:textColor="#FF6F00"
        android:textSize="@dimen/_15sdp"
        app:layout_constraintBottom_toBottomOf="@+id/cardView"
        app:layout_constraintEnd_toEndOf="@+id/cardView"
        app:layout_constraintStart_toStartOf="@+id/cardView" />

    <TextView
        android:id="@+id/cartMealPrice"
        android:layout_width="@dimen/_72sdp"
        android:layout_height="@dimen/_27sdp"
        android:background="@drawable/padding_btn"
        android:fontFamily="@font/tajawal_regular"
        android:gravity="center"
        android:shadowColor="#000000"
        android:text="30"
        android:textColor="#FFFFFF"
        android:textSize="@dimen/_15sdp"
        app:layout_constraintBottom_toBottomOf="@+id/cardView"
        app:layout_constraintEnd_toEndOf="@+id/pluseIV"
        app:layout_constraintStart_toStartOf="@+id/minuseIV"
        app:layout_constraintTop_toBottomOf="@+id/mealNumberTVFragment" />

    <TextView
        android:id="@+id/cartMealNumberTV"
        android:layout_width="@dimen/_17sdp"
        android:layout_height="@dimen/_25sdp"
        android:fontFamily="@font/tajawal_regular"
        android:gravity="center"
        android:text="3"
        android:textColor="#FF6F00"
        android:textSize="@dimen/_18sdp"
        app:layout_constraintEnd_toStartOf="@+id/cardView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/cardView" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="@dimen/_83sdp"
        android:layout_height="@dimen/_77sdp"
        android:layout_marginTop="@dimen/_8sdp"
        android:layout_marginEnd="@dimen/_16sdp"
        android:layout_marginBottom="@dimen/_8sdp"
        app:cardCornerRadius="@dimen/_5sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/cartMealImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/food" />

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/textView9"
        android:layout_width="0dp"
        android:layout_height="2dp"
        android:layout_marginTop="@dimen/_15sdp"
        android:background="@color/purple_500"
        app:layout_constraintBottom_toBottomOf="@+id/cartMealNumberTV"
        app:layout_constraintEnd_toEndOf="@+id/cartMealNumberTV"
        app:layout_constraintStart_toStartOf="@+id/cartMealNumberTV"
        app:layout_constraintTop_toTopOf="@+id/cartMealNumberTV" />
</androidx.constraintlayout.widget.ConstraintLayout>