<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/background"
    android:layout_gravity="center"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView52"
        android:layout_width="@dimen/_151sdp"
        android:layout_height="@dimen/_35sdp"
        android:layout_marginTop="@dimen/_152sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        android:layout_marginStart="@dimen/_115sdp"
        android:text="اختر طريقة الدفع"
        android:textSize="@dimen/_15sdp"
        android:textColor="#FF6F00"
        android:gravity="center"
        android:fontFamily="@font/tajawal_bold"
        android:background="@drawable/field_background_shape"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.836"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView53"
        android:layout_width="@dimen/_188sdp"
        android:layout_height="@dimen/_47sdp"
        android:layout_marginTop="@dimen/_27sdp"
        android:background="@drawable/padding_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView52" />

    <TextView
        android:id="@+id/textView55"
        android:layout_width="@dimen/_188sdp"
        android:layout_height="@dimen/_47sdp"
        android:layout_marginTop="@dimen/_19sdp"
        android:background="@drawable/padding_btn"
        app:layout_constraintEnd_toEndOf="@+id/textView53"
        app:layout_constraintStart_toStartOf="@+id/textView53"
        app:layout_constraintTop_toBottomOf="@+id/textView53" />

    <ImageView
        android:id="@+id/imageView15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_9sdp"
        app:layout_constraintEnd_toEndOf="@+id/textView53"
        app:layout_constraintStart_toStartOf="@+id/textView53"
        app:layout_constraintTop_toTopOf="@+id/textView53"
        app:srcCompat="@drawable/visa" />

    <TextView
        android:id="@+id/textView56"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_7sdp"
        android:layout_marginBottom="@dimen/_5sdp"
        android:text="استخدم بطاقة فيزا للدفع"
        android:textColor="#FFFFFF"
        android:textSize="@dimen/_8sdp"
        android:fontFamily="@font/tajawal_regular"
        app:layout_constraintBottom_toBottomOf="@+id/textView53"
        app:layout_constraintEnd_toEndOf="@+id/textView53"
        app:layout_constraintStart_toStartOf="@+id/textView53" />

    <TextView
        android:id="@+id/textView58"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_3sdp"
        android:text="Cash"
        android:textSize="@dimen/_15sdp"
        android:fontFamily="@font/tajawal_bold"
        android:textColor="#1D0E0E"
        app:layout_constraintEnd_toEndOf="@+id/textView55"
        app:layout_constraintStart_toStartOf="@+id/textView55"
        app:layout_constraintTop_toTopOf="@+id/textView55" />

    <TextView
        android:id="@+id/textView59"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_7sdp"
        android:layout_marginBottom="@dimen/_5sdp"
        android:text="سوف تقوم بالدفع عند وصول الطلب "
        android:textColor="#FFFFFF"
        android:textSize="@dimen/_8sdp"
        android:fontFamily="@font/tajawal_regular"
        app:layout_constraintBottom_toBottomOf="@+id/textView55"
        app:layout_constraintEnd_toEndOf="@+id/textView55"
        app:layout_constraintStart_toStartOf="@+id/textView55"
        app:layout_constraintTop_toBottomOf="@+id/textView58" />


</androidx.constraintlayout.widget.ConstraintLayout>