<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#292929"
        app:itemIconTint="#FFFFFF"
        app:itemTextColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:menu="@menu/bottom_navigation_main" />

    <TextView
        android:id="@+id/textView48"
        android:layout_width="@dimen/_248sdp"
        android:layout_height="@dimen/_32sdp"
        android:layout_marginTop="@dimen/_11sdp"
        android:background="@drawable/field_background_shape"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView12"
        android:layout_width="@dimen/_26sdp"
        android:layout_height="@dimen/_26sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        app:layout_constraintBottom_toBottomOf="@+id/textView48"
        app:layout_constraintEnd_toEndOf="@+id/textView48"
        app:layout_constraintTop_toTopOf="@+id/textView48"
        app:srcCompat="@drawable/search"
        android:background="@drawable/circle_shape_orange"/>

    <TextView
        android:id="@+id/textView49"
        android:layout_width="@dimen/_184sdp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/_7sdp"
        android:text="ابحث عن موقعك أو حرك الخريطة"
        android:textSize="@dimen/_11sdp"
        android:textColor="#000000"
        android:fontFamily="@font/tajawal_regular"
        android:gravity="right"
        app:layout_constraintBottom_toBottomOf="@+id/textView48"
        app:layout_constraintEnd_toStartOf="@+id/imageView12"
        app:layout_constraintStart_toStartOf="@+id/textView48"
        app:layout_constraintTop_toTopOf="@+id/textView48" />


    <TextView
        android:id="@+id/textView50"
        android:layout_width="@dimen/_248sdp"
        android:layout_height="@dimen/_32sdp"
        android:layout_marginTop="@dimen/_437sdp"
        android:background="@drawable/field_background_shape"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView48" />

    <ImageView
        android:id="@+id/imageView13"
        android:layout_width="@dimen/_26sdp"
        android:layout_height="@dimen/_26sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        android:background="@drawable/circle_shape_orange"
        app:layout_constraintBottom_toBottomOf="@+id/textView50"
        app:layout_constraintEnd_toEndOf="@+id/textView50"
        app:layout_constraintTop_toTopOf="@+id/textView50"
        app:srcCompat="@drawable/map_white" />

    <TextView
        android:id="@+id/textView51"
        android:layout_width="@dimen/_184sdp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/_7sdp"
        android:fontFamily="@font/tajawal_regular"
        android:gravity="right"
        android:text="الموقع الذي اخترته"
        android:textColor="#000000"
        android:textSize="@dimen/_11sdp"
        app:layout_constraintBottom_toBottomOf="@+id/textView50"
        app:layout_constraintEnd_toStartOf="@+id/imageView13"
        app:layout_constraintStart_toStartOf="@+id/textView50"
        app:layout_constraintTop_toTopOf="@+id/textView50" />

    <Button
        android:id="@+id/button3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/padding_btn"
        android:fontFamily="@font/tajawal_bold"
        android:gravity="center"
        android:text="تأكيد"
        android:textColor="#FFFFFF"
        android:textSize="@dimen/_25sdp"
        app:layout_constraintBottom_toTopOf="@+id/bottom_navigation"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView50"
        app:layout_constraintVertical_bias="1.0" />


</androidx.constraintlayout.widget.ConstraintLayout>