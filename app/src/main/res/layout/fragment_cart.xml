<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment.CartFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

    <TextView
        android:id="@+id/textView34"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_38sdp"
        android:layout_marginEnd="@dimen/_29sdp"
        android:layout_marginStart="@dimen/_75sdp"
        android:text="سلة المشتريات"
        android:fontFamily="@font/tajawal_bold"
        android:textSize="@dimen/_25sdp"
        android:textColor="#292929"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.809"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView39"
        android:layout_width="@dimen/_256sdp"
        android:layout_height="@dimen/_298sdp"
        android:layout_marginTop="@dimen/_3sdp"
        android:elevation="@dimen/_10sdp"
        android:background="@drawable/field_background_shape"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView34" />

    <ImageView
        android:id="@+id/imageView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_12sdp"
        android:layout_marginEnd="@dimen/_68sdp"
        android:background="@drawable/circle_shape_orange"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView39"
        app:srcCompat="@drawable/map_white" />

    <TextView
        android:id="@+id/editTextTextPersonName"
        android:layout_width="@dimen/_150sdp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_15sdp"
        android:fontFamily="@font/tajawal_regular"
        android:gravity="center"
        android:inputType="textPersonName"
        android:text="الموقع الذي اخترته"
        android:textColor="#292929"
        android:textSize="@dimen/_13sdp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView11"
        app:layout_constraintEnd_toStartOf="@+id/imageView11"
        app:layout_constraintTop_toBottomOf="@+id/textView39" />

    <TextView
        android:id="@+id/textView41"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_68sdp"
        android:fontFamily="@font/tajawal_regular"
        android:text="مجموع سعر الطلبات"
        android:textColor="#292929"
        android:textSize="@dimen/_13sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextTextPersonName" />

    <TextView
        android:id="@+id/cartallPriceToMealsTV"
        android:layout_width="@dimen/_15sdp"
        android:layout_height="@dimen/_16sdp"
        android:layout_marginStart="@dimen/_9sdp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/black_btn"
        android:textColor="#FFFFFF"
        android:textSize="@dimen/_13sdp"
        android:textAlignment="center"
        android:fontFamily="@font/tajawal_regular"
        app:layout_constraintEnd_toStartOf="@+id/textView41"
        app:layout_constraintTop_toTopOf="@+id/textView41" />

    <TextView
        android:id="@+id/textView43"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_2sdp"
        android:fontFamily="@font/tajawal_regular"
        android:text="سعر التوصيل"
        android:textColor="#292929"
        android:textSize="@dimen/_13sdp"
        app:layout_constraintEnd_toEndOf="@+id/textView41"
        app:layout_constraintTop_toBottomOf="@+id/textView41" />

    <TextView
        android:id="@+id/textView44"
        android:layout_width="@dimen/_15sdp"
        android:layout_height="@dimen/_16sdp"
        android:layout_marginTop="@dimen/_3sdp"
        android:background="@drawable/black_btn"
        android:fontFamily="@font/tajawal_regular"
        android:text="10"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="@dimen/_13sdp"
        app:layout_constraintStart_toStartOf="@+id/cartallPriceToMealsTV"
        app:layout_constraintTop_toBottomOf="@+id/cartallPriceToMealsTV" />

    <TextView
        android:id="@+id/textView45"
        android:layout_width="@dimen/_148sdp"
        android:layout_height="@dimen/_27sdp"
        android:layout_marginTop="@dimen/_6sdp"
        android:background="@drawable/black_btn"
        app:layout_constraintEnd_toEndOf="@+id/textView43"
        app:layout_constraintTop_toBottomOf="@+id/textView43" />

    <TextView
        android:id="@+id/textView47"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/_5sdp"
        android:text="المبلغ الكلي"
        android:textColor="#FFFFFF"
        android:textSize="@dimen/_15sdp"
        android:textAlignment="center"
        android:gravity="center"
        android:fontFamily="@font/tajawal_bold"
        app:layout_constraintEnd_toEndOf="@+id/textView45"
        app:layout_constraintTop_toTopOf="@+id/textView45" />

    <TextView
        android:id="@+id/cartFinalPriceToMealsTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/_32sdp"
        android:layout_marginStart="@dimen/_16sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:textColor="#FFFFFF"
        android:textSize="@dimen/_13sdp"
        android:fontFamily="@font/tajawal_regular"
        android:gravity="center"
        android:textAlignment="center"
        app:layout_constraintEnd_toStartOf="@+id/textView47"
        app:layout_constraintStart_toStartOf="@+id/textView45"
        app:layout_constraintTop_toTopOf="@+id/textView47" />

    <Button
        android:id="@+id/confirmCartMealBtnTV"
        android:layout_width="@dimen/_193sdp"
        android:layout_height="@dimen/_37sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginBottom="@dimen/_24sdp"
        android:background="@drawable/padding_btn"
        android:fontFamily="@font/tajawal_bold"
        android:gravity="center"
        android:text="تأكيد الطلب"
        android:textColor="#FFFFFF"
        android:textSize="@dimen/_16sdp"
        app:layout_constraintBottom_toTopOf="@+id/bottom_navigation"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView45" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/cartRecyclerView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:elevation="@dimen/_10sdp"
        app:layout_constraintBottom_toBottomOf="@+id/textView39"
        app:layout_constraintEnd_toEndOf="@+id/textView39"
        app:layout_constraintStart_toStartOf="@+id/textView39"
        app:layout_constraintTop_toTopOf="@+id/textView39" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>