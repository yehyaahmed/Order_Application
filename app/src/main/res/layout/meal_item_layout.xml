<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="@dimen/_107sdp"
        android:layout_height="@dimen/_100sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginBottom="@dimen/_10sdp"
        android:elevation="@dimen/_10sdp"
        app:cardCornerRadius="@dimen/_5sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/mealImageIV"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:elevation="@dimen/_10sdp"
            android:scaleType="centerCrop"
            android:src="@drawable/food" />

        <ImageView
            android:id="@+id/mealfavoriteIV"
            android:layout_width="@dimen/_12sdp"
            android:layout_height="@dimen/_12sdp"
            android:layout_gravity="top|right"
            android:layout_marginTop="@dimen/_9sdp"
            android:layout_marginRight="@dimen/_9sdp"
            android:elevation="@dimen/_10sdp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_favorite_border" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_19sdp"
            android:layout_gravity="bottom"
            android:background="@drawable/section_name_bg"
            android:elevation="@dimen/_10sdp">



            <TextView
                android:id="@+id/mealCartTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_6sdp"
                android:background="@drawable/circle_shape_orange"
                app:layout_constraintBottom_toBottomOf="@+id/mealPriceTV"
                app:layout_constraintStart_toEndOf="@+id/mealPriceTV"
                app:layout_constraintTop_toTopOf="@+id/mealPriceTV" />

            <TextView
                android:id="@+id/mealNameTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/_5sdp"
                android:elevation="@dimen/_10sdp"
                android:fontFamily="@font/tajawal_bold"
                android:text="شيش"
                android:gravity="center|right"
                android:textColor="#FF6F00"
                android:textSize="@dimen/_15sdp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/mealPriceTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_4sdp"
                android:background="@drawable/circle_shape_orange"
                android:fontFamily="@font/tajawal_regular"
                android:gravity="center"
                android:text="15"
                android:textColor="#FFFFFF"
                android:textSize="@dimen/_8sdp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:layout_width="@dimen/_8sdp"
                android:layout_height="@dimen/_8sdp"
                android:src="@drawable/cart"
                app:layout_constraintBottom_toBottomOf="@+id/mealCartTV"
                app:layout_constraintEnd_toEndOf="@+id/mealCartTV"
                app:layout_constraintStart_toStartOf="@+id/mealCartTV"
                app:layout_constraintTop_toTopOf="@+id/mealCartTV" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>